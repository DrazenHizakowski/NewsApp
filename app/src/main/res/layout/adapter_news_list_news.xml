<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/news_holder_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#de000000"
        android:lineSpacingExtra="9sp"
        android:maxLines="2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/news_list_list_items_left_margin"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Beijing&apos;s Smoggy Skies Obscure China Slowdown"
        />

    <TextView
        android:id="@+id/news_holder_content_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#444444"
        android:lineSpacingExtra="7sp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="32dp"
        android:maxLines="6"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/news_holder_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/news_holder_title_text_view"
        tools:text="China’s economy kicked off 2018 strongly—kind of. This latest bump doesn’t look very sustainable, however."
        />

    <TextView
        android:id="@+id/news_holder_time_and_creator_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#de777777"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/news_holder_content_text_view"
        app:layout_constraintRight_toRightOf="@id/news_holder_content_text_view"
        app:layout_constraintTop_toBottomOf="@id/news_holder_content_text_view"
        android:layout_marginBottom="12dp"
        tools:text="1 hour ago by Engadget"
        />
</android.support.constraint.ConstraintLayout>
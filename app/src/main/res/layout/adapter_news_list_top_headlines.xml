<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/headline_holder_cover_image_view"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/news_list_list_items_left_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/headline_holder_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#de000000"
        android:lineSpacingExtra="9sp"
        android:gravity="left"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="@id/headline_holder_cover_image_view"
        app:layout_constraintTop_toBottomOf="@id/headline_holder_cover_image_view"
        app:layout_constraintLeft_toLeftOf="@id/headline_holder_cover_image_view"
        tools:text="Obituary: Stephen Hawking"
        />

    <TextView
        android:id="@+id/headline_holder_news_source_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#673ab7"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/headline_holder_title_text_view"
        app:layout_constraintLeft_toLeftOf="@id/headline_holder_title_text_view"
        tools:text="Bbc.com"
        />

    <TextView
        android:id="@+id/headline_holder_created_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#de777777"
        android:lineSpacingExtra="7sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/headline_holder_news_source_text_view"
        app:layout_constraintTop_toBottomOf="@id/headline_holder_news_source_text_view"
        tools:text="2 hours ago"
        />
</android.support.constraint.ConstraintLayout>